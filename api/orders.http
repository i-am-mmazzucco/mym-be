  "statusPayment": "pending",
  "items": [
    {
      "quantity": 2,
      "product": {
        "id": 1
      }
    }
  ]
}

### Update order
PUT {{url}}/orders/1
Content-Type: application/json

{
  "statusDelivery": "delivered",
  "items": [
    {
      "quantity": 5,
      "product": {
        "id": 1
      }
    },
    {
      "quantity": 1,
      "product": {
        "id": 3
      }
    }
  ]
}

### Delete order
DELETE {{url}}/orders/1
Content-Type: application/json
